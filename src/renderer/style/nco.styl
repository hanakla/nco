*, *:before, *:after
    box-sizing border-box

html, body
    width 100%
    height 100%
    margin 0
    padding 0
    background-color $color_bg
    overflow hidden

    font normal $fsz_nm/1 'mplus-2p'
    cursor default

#nco-container
    display flex
    width 100%
    height 100%
    flex-direction column

    position relative

#nco-shell
    //background-color $color_dummy
    //overflow hidden
    position fixed
    width 100%
    z-index 150

    user-select none
    -webkit-app-region drag


#nco-main
    position relative
    z-index 50
    flex 1

#nco-control
    position relative
    //overflow hidden
    z-index 100
    //height 32px
    background-color $color_main

#nco-login
    position fixed
    top 0
    left 0
    z-index 1000

#nco-preference
    position fixed
    top 0
    left 0
    z-index 1001

#powerTip
    padding 8px
    font-size 12px

