.NcoLogin
    position fixed
    top 0
    left 0

    width 100%
    height 0

    opacity 0

    transition .3s ease-out
    transition-property height, opacity

    &.show
        height 100%
        opacity 1

        .NcoLogin_modal
            animation NcoModalShow .3s ease-out

    &_backface
        display -webkit-box
        width 100%
        height 100%
        background-color rgba(40, 40, 40, 0.8)
        overflow auto

        -webkit-box-pack center
        -webkit-box-align center

    &_modal
        width 80%
        min-width 400px
        //margin 16px auto
        overflow hidden

        background-color rgb(250, 250, 250)

        h1
            margin 0 0 24px 0
            padding 24px 16px
            border-bottom 1px solid #ddd

            font-family "mplus-2p-thin"
            font-size $fsz_lg2
            line-height 1

        &_footer
            clearfix()

            border-top 1px solid #ddd
            padding 16px
            margin-top 24px

    &_form
        padding 0 32px

        &_group
            margin-bottom 16px

        &_label
            display inline-block

            width 10em
            padding 8px 0

            font-size $fsz_nm

            &.container
                width auto

        &_input
            width 60%
            padding 8px 8px
            border 1px solid #ddd

            font-size $fsz_nm
            font-family 'mplus-2p'

            box-shadow none

            outline none
            transition box-shadow .3s ease

            &:focus
                box-shadow 0 0 10px $color_main

        &_submit
            width 10em
            padding 12px 16px
            border none
            float right

            font-size $fsz_sm
            line-height 1

            color white
            background-color $color_primary

            outline none

    &_error
        display none
        padding 16px 8px

        border 1px solid $color_danger
        color white
        background-color lighten($color_danger, 50%)


@media (max-width: 600px)
    .NcoLogin_modal_footer
        padding 8px

    .NcoLogin_form_input
        width 100%

    .NcoLogin_form_submit
        width 100%
