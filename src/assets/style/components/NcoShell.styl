.NcoShell
    clearfix()

    height 48px
    padding 8px

    line-height (@height - 16px) // height - padding(top+bottom)
    overflow hidden

    background-color $color_bg
    box-shadow 0 0 5px rgba(190, 190, 190, 0.5)

    $_contentHeight = (@height - 16px)


    &_nelchan
        position relative
        float left

        height $_contentHeight


        &::after
            content ''
            position absolute
            top 0
            right 0
            margin-top ($_contentHeight / 2 - 2px)
            margin-right (16px / 2 - 2px)

            border 4px solid transparent
            border-color #bbb transparent transparent transparent

        &_select
            -webkit-appearance none
            border none
            background-color transparent
            border-radius 0
            outline none

            padding 4px 8px
            height $_contentHeight
            padding-right 24px // 内 8pxはアイコンとの間隔
            //border-bottom 1px solid #bbb

            font-family "mplus-2p-thin"
            font-size 20px
            line-height 1

            transition-property box-shadow
            transition-duration .15s

            -webkit-app-region no-drag

            &:hover
                box-shadow 0 2px 2px rgba(223, 223, 223, .5)


    &_ctrl
        float right

        &_btn
            position relative

            width 16px
            height @width
            margin-right 4px

            line-height @height

            border none
            background #eee
            border-radius 50px

            outline none
            zoom 1

            &.close
                background-color $shell_close

                &:hover
                    &::before, &::after
                        content ""
                        position absolute
                        top 50%
                        left 50%
                        margin -1px 0 0 -4px

                        width 8px
                        border-top 2px solid $shell_icon
                        transform rotateZ(45deg)

                    &::after
                        transform rotateZ(-45deg)

            &.minimize
                background-color $shell_minimize

                &:hover::before
                    content ""

                    position absolute
                    left 50%
                    bottom 4px

                    width 8px
                    margin-left -4px

                    border-top 2px solid $shell_icon

            &.maximize
                background-color $shell_maximize

                &:hover::before
                    content ""

                    position absolute
                    left 50%
                    top 50%

                    width 8px
                    height 8px
                    margin -4px 0 0 -4px

                    border 2px solid $shell_icon

            &.pin
                background-color $shell_pin

                &:hover::before
                    content ""

                    position absolute
                    left 50%
                    top 50%

                    width 8px
                    height 8px
                    margin -4px 0 0 -4px

                    background-color $shell_icon
